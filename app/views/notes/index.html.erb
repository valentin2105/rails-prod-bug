<h2> Liste des notes</h2>

</br>
<%= link_to 'Ajouter une note', new_note_path, class:"btn btn-primary" %>
<br>
</br>

<table class="table  table-striped table-bordered table-hover">

    <tr>
        <th>Date</th>
        <th>Author</th>
        <th>Title</th>
        <th>Text</th>
        <th></th>
    </tr>

    <% @notes.order("created_at desc").each do |note| %>
    <tr>
        <td><%= note.created_at %></td>
        <td><%= note.author %></td>
        <td><%= note.title %></td>
        <td><%= note.text %></td>
        <td><%= link_to 'Voir', note_path(note) %></td>
    </tr>
    <% end %>
</table>