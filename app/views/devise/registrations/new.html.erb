
<%= form_for(resource, as: resource_name, :html => {:class => 'form-signup '}, url: registration_path(resource_name)) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  <div class="text-center mb-4">

      <h2>S'inscrire</h2>

    </br>

  <div class="form-group">
        <div class="field form-label-group">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control"  %>
            <label for="inputEmail">E-mail</label>
        </div>

  <div class="form-group">
        <div class="field form-label-group">
          <%= f.password_field :password, autocomplete: "nouveau-motdepasse", class: "form-control"   %>
          <label for="inputPassword">Password
          <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %></label>
        </div>

    <div class="form-group">
        <div class="field form-label-group">
          <%= f.password_field :password_confirmation, autocomplete: "nouveau-motdepasse", class: "form-control" %>
          <label for="inputPasswordCheck">Confirmation de mot de passe </label>
  </div>

  <div class="actions form-actions">
            <%= f.submit "Confirmer",  class: "btn btn-large btn-primary" %>
            </div>
<% end %>
<br>
<%= render "devise/shared/links" %>